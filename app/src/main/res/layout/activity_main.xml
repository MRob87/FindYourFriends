<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCDDD"
    tools:context="mydevenv.findmyfriends.Compass">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="2dp"
        android:text="Heading: 0.0"
        android:layout_gravity="center_horizontal|top"
        android:typeface="normal"
        android:textSize="30dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_below="@+id/tvHeading"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dial"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/compassHand"
        android:layout_below="@+id/tvHeading"
        android:layout_width="5dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blackbar"
        android:layout_gravity="center"
        android:layout_marginTop="-135dp" />

    <ImageView
        android:id="@+id/guidingDirectionHand"
        android:layout_below="@+id/tvHeading"
        android:layout_width="20dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/compass"
        android:layout_gravity="center"
        android:layout_marginTop="-75dp" />

    <TextView
        android:id="@+id/tvGo"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Go: 0.0"
        android:layout_gravity="center_horizontal|bottom"
        android:typeface="normal"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginRight="-100dp" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="0.0miles"
        android:layout_gravity="center_horizontal|bottom"
        android:typeface="normal"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginRight="-100dp" />

    <ImageView
        android:id="@+id/imageViewBearingCompass"
        android:layout_below="@+id/tvHeading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dial"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:id="@+id/bearingHand"
        android:layout_below="@+id/tvHeading"
        android:layout_width="10dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/compass"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="77dp"
        android:layout_marginBottom="15dp" />


</FrameLayout>
